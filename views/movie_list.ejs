<!DOCTYPE html>
<html lang="en">
  <% include partials/header %>
  <body>

    <% include partials/navbar %>
    
    <div class="container">
      
      <ul>
        <% for(var i=0; i<movies.length; i++) {%>
           <li>
             <table>
               <tr><td>Title:</td><td><%= movies[i].title %></td></tr>
               <tr><td>Release Year:</td><td><%= movies[i].release_year %></td></tr>
               <tr><td>Location:</td><td><%= movies[i].locations %></td></tr>
               <tr><td>Director:</td><td><%= movies[i].director %></td></tr>
               <tr><td>Writer:</td><td><%= movies[i].writer %></td></tr>              
               <% if(movies[i].actor_1) { %>
               <tr><td>Actor 1:</td><td><%= movies[i].actor_1 %></td></tr>
               <% } %>
               <% if(movies[i].actor_2) { %>
               <tr><td>Actor 2:</td><td><%= movies[i].actor_2 %></td></tr>
               <% } %>
               <% if(movies[i].actor_3) { %>
               <tr><td>Actor 3:</td><td><%= movies[i].actor_3 %></td></tr>
               <% } %>
               <% if(movies[i].production_company) { %>
               <tr><td>Production Company:</td><td><%= movies[i].production_company %></td></tr>
               <% } %>
               <% if(movies[i].distributor) { %>
               <tr><td>Distributor:</td><td><%= movies[i].distributor %></td></tr>
               <% } %>
               <% if(movies[i].fun_facts) { %>
               <tr><td>Fun Facts:</td><td><%= movies[i].fun_facts %></td></tr>
               <% } %>
             </table>
           </li>
        <% } %>
      </ul>
      
      <% include partials/footer %>
    </div>
    <!-- /container -->

    <script type="text/javascript">
      $(document).ready(function() {
        $('#about').addClass("active");
      });
    </script>

    <% include partials/js_include %>

  </body>
</html>
